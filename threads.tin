(defnet th-sound (th)
        (deflocal snd t prev-t)

        (set prev-t (- (now) (* 60 60 24)))
        (repeat (receive snd from th)
                until (= snd undef)
                (set t (now))
                (opt    (truep <_kv "sound-enabled">)
                        ;(if (> (- t prev-t) 30)
                        ;then    (sdl-playwav-memory (raw-load-static "silence.wav") 1.0) )
                        (sdl-playwav-memory snd 1.0) )
                (set prev-t t) ))

