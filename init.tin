(defnet init-constants ()
        (set <_kv "da-chiudere"> (queue))
        (set <_kv "zoom-level"> 0)
        (set <_kv "display-name"> (sdl-get-display-name (sdl-get-primary-display)))
        (set <_kv "fullsize-width"> (iup-fullsize-width))
        (set <_kv "fullsize-height"> (iup-fullsize-height))
        (set <_kv "screensize-width"> (iup-screensize-width))
        (set <_kv "screensize-height"> (iup-screensize-height)) )

