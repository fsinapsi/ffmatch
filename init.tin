(defnet init-parse-args ()
        (deflocal i p)

        (for i in 1 .. (- (argc) 1) do
                (set p (argv i))
                (alt    (seq    (lmatch remove p "--cfg=")
                                (set <_kv "cfg-path"> p) )
                        (seq    (iup-error60 undef (+ (utf8-validate p) $": invalid option"))
                                (exit -1) ))))

