(defglobal _kv _abort)

(defnet init ()
        (set _kv (assoc))
        (set _abort (array default false 1))
        (init-parse-args)
        (init-constants)
        (init-db)
        (history-clear)
        (init-default)
        (init-threads)
        (set <_kv "sound-enabled"> (cfg-get-or-default "sound-enabled" <_kv "default">))
        (if (> (fullsize-width) 1366)
        then    (iup-set-default-font-size (+ (iup-default-font-size)
                                              (if (<= (fullsize-width) 1920) 1 2) ))))

