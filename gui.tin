(defnet gui-extremes-low (sup)
        (deflocal k n1 n2 map p q n i1 i2)

        (set k (cfg-get (key-map <_kv "av1">
                                 <_kv "av2">
                                 (fullpath->name <_kv "path1">)
                                 (fullpath->name <_kv "path2">) )))
        (<> k undef)
        (set n1 (gui-spin-value 1))
        (set n2 (gui-spin-value 2))
        (set map (map-create <k 0> <k 1>))
        (for i1 in <k 2> do
                (set p <i1 0>)
                (set q <i1 1>)
                (set n <i1 2>)
                (map-bind-low (car map) p q n)
                (map-bind-low (cdr map) q p n) )
        (for i1 in (car map) do
                until (in n1 <i1 0> .. <i1 1>) )
        (for i2 in (cdr map) do
                until (in n2 <i2 0> .. <i2 1>) )
        (gui-sync-skip-low (if sup (min (- <i1 1> n1) (- <i2 1> n2))
                                   (max (- <i1 0> n1) (- <i2 0> n2)) )))

(defnet gui-sync-skip-low (n)
        (opt (gui-sync-skip-low-low n)) )

(defnet gui-sync-skip-low-low (n)
        (deflocal av1 av2 n1 n2 c)

        (= <_kv "th"> undef)
        (<> n 0)
        (set av1 <_kv "av1">)
        (set av2 <_kv "av2">)
        (set n1 (+ n (gui-spin-value 1)))
        (set n2 (+ n (gui-spin-value 2)))
        (set c (min n1 n2))
        (if (< c 1)
        then    (set c (- 1 c))
                (inc n1 c)
                (inc n2 c) )
        (set c (min (- (av-approximated-number-of-frames av1) n1) (- (av-approximated-number-of-frames av2) n2)))
        (if (< c 2)
        then    (inc c -2)
                (inc n1 c)
                (inc n2 c) )
        (gui-spin-set-value 1 n1)
        (gui-spin-set-value 2 n2)
        (gui-update-image) )

