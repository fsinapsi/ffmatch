(defnet gui-abort-cb (self)
        (opt (gui-abort-low self)) )

(defnet gui-abort-low (self)
        (deflocal th)

        (not <_kv "abort">)
        (set th <_kv "th">)
        (<> th undef)
        (iup-confirm60 self
                (+ $"The current operation will be aborted." nl $"Are you sure?") )
        (set <_kv "abort"> true)
        (sendbuf 100 false to th) )

