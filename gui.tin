(defnet gui-spin-kb2-cb (self c)
        (gui-spin-kb-low 2 self c) )

(defnet gui-spin-kb-low (which self c)
        (alt    (<> <_kv "th"> undef)
                (or (= <_kv "av1"> undef) (= <_kv "av2"> undef))
                (seq    (= c (cmacro K_CR))
                        (gui-spin-shortcut-low which self 0) )
                (seq    (= c (cmacro K_sUP))
                        (gui-spin-shortcut-low which self 10) )
                (seq    (= c (cmacro K_sDOWN))
                        (gui-spin-shortcut-low which self -10) )
                (seq    (= c (cmacro K_TAB))
                        (opt (gui-sync-low which false)) )))

(defnet gui-spin-shortcut-low (which spin incr)
        (opt    (gui-spin-set-value which (+ (gui-spin-value which) incr))
                (gui-update-image) ))

