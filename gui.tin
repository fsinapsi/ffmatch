        (set av (av-avformat-open-input path))
        (alt    (seq    (<> av undef)
                        (set n (av-r-frame-rate av (av-video-stream-idx av)))
                        (rationalp n)
                        (> n 0)
                        (set n (av-approximated-number-of-frames av))
                        (integerp n)
