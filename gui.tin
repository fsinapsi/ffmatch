(defnet gui-spin2-cb (self v)
        (gui-spin-low 2 self v) )

(defnet gui-spin-low (which self v)
        (deflocal vv)

        (set vv (gui-spin-value which))
        (if (<> v vv)
        then    (if (<> <_kv "th"> undef)
                then    (iup-set-int self "SPINVALUE" vv)
                else    (iup-set-str-attribute self "VALUE" v)
                        (gui-update-image) )))

