(defnet sift-analyze (matches @nx @ny @bnx @bny @sumrx @sumry @deltax @deltay)
        (deflocal l)

        (set l (sift-analyze matches))
        (list-pop l @nx)
        (list-pop l @ny)
        (list-pop l @bnx)
        (list-pop l @bny)
        (list-pop l @sumrx)
        (list-pop l @sumry)
        (list-pop l @deltax)
        (list-pop l @deltay) )

