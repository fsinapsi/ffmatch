(defnet sift-draw-image (m)
        (deflocal th-main msg)

        (set th-main (match-th-main m))
        (send [ "d" . undef ] to th-main)
        (receive msg from th-main)
        (if (not msg)
        then    (receive msg from th-main)
                (match-abort m) ))

