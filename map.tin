(defun map-create (n1 n2) net map-create)
(defnet map-create (n1 n2 @map)
        (deflocal a1 a2)

        (integerp n1)
        (>= n1 1)
        (integerp n2)
        (>= n2 1)
        (set a1 (array 3))
        (set <a1 0> 1)
        (set <a1 1> n1)
        (set a2 (array 3))
        (set <a2 0> 1)
        (set <a2 1> n2)
        (set @map (cons (array default a1 1)
                        (array default a2 1) )))

