(defun map-free1 (m)
        (map-free-basic (map-undef1 m)) )

(defun map-free2 (m)
        (map-free-basic (map-undef2 m)) )

(defun map-free-basic (u) net map-free-basic)
(defnet map-free-basic (u @n)
        (deflocal ut)

        (set @n 0)
        (while (> (length u) 0) do
                (set ut (queue-get u))
                (inc @n (- (nth 1 ut) (nth 0 ut) -1)) ))

