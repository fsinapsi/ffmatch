(defun map-free1 (m)
        (map-free-low (map-undef1 m)) )

(defun map-free2 (m)
        (map-free-low (map-undef2 m)) )

(defun map-free-low (u) net map-free-low)
(defnet map-free-low (u @n)
        (deflocal ut)

        (set @n 0)
        (while (> (length u) 0) do
                (set ut (queue-get u))
                (inc @n (- <ut 1> <ut 0> -1)) ))

