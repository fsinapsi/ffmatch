(defnet map-bind (m p q n)
        (array-append (match-map-step m) (list p q n))
        (set m (match-map m))
        (map-bind-basic (car m) p q n)
        (map-bind-basic (cdr m) q p n) )

(defnet map-bind-basic (map p q n)
        (deflocal i j a aa freea freeb found)

        (for i in 0 .. (- (length map) 1) do
                (set a (nth i map))
                (set freea (nth 0 a))
                (set freeb (nth 1 a))
                (set found (in p freea .. freeb))
                until found )
        (= found true)
        (= (nth 2 a) undef)
        (set j (+ p n -1))
        (in j freea .. freeb)
        (if (> p freea)
        then    (set aa (array 3))
                (set <aa 0> freea)
                (set <aa 1> (- p 1))
                (array-insert map i aa)
                (inc i) )
        (if (< j freeb)
        then    (set aa (array 3))
                (set <aa 0> (+ j 1))
                (set <aa 1> freeb)
                (array-insert map (+ i 1) aa) )
        (set <a 0> p)
        (set <a 1> j)
        (set <a 2> q)
        (if (and (= p freea)
                 (= (- (nth 2 (nth (- i 1) map)) (nth 0 (nth (- i 1) map)))
                    (- q p) ))
        then    (array-remove map i)
                (inc i -1)
                (set a (nth i map))
                (set <a 1> j)
                (set p (nth 0 a))
                (set q (nth 2 a)) )
        (if (and (= j freeb)
                 (= (- (nth 2 (nth (+ i 1) map)) (nth 0 (nth (+ i 1) map)))
                    (- q p) ))
        then    (set <a 1> (nth 1 (nth (+ i 1) map)))
                (array-remove map (+ i 1)) ))

