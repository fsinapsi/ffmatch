(defun map-max1 (m)
        (map-max-basic (car (match-map m))) )

(defun map-max2 (m)
        (map-max-basic (cdr (match-map m))) )

(defun map-max-basic (map)
        (nth 1 (nth (- (length map) 1) map)) )

