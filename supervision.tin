(defnet supervision-sync (info)
        (deflocal map n1 n2 p q n u ut prv i)

        (set i (cfg-get (key-map (assoc-get info "av1")
                                 (assoc-get info "av2")
                                 (fullpath->name (assoc-get info "path1"))
                                 (fullpath->name (assoc-get info "path2")) )))
        (<> i undef)
        (set map (map-create (nth 0 i) (nth 1 i)))
        (set n1 (assoc-get info "supervision-n1"))
        (set n2 (assoc-get info "supervision-n2"))
        (for i in (nth 2 i) do
                (set p (nth 0 i))
                (set q (nth 1 i))
                (set n (nth 2 i))
                (if (in n1 p .. (+ p n -1))
                then    (set n (+ n1 q -p))
                        (<> n n2)
                        (gtk-spin-button-set-value (assoc-get info "w-spin2") n)
                        (fail) )
                (map-bind-basic (car map) p q n)
                (map-bind-basic (cdr map) q p n) )
        (set u (map-undef-basic (car map) (cdr map)))
        (set ut (queue-get u))
        (for i in (car map) do
                (set p (nth 0 i))
                (set q (nth 1 i))
                (set n (nth 2 i))
                (if (= n undef)
                then    (if (and (= p (nth 0 ut)) (= q (nth 1 ut)))
                        then    (if (in n1 p .. q)
                                then    (set n (min (max (+ (nth 2 ut) n1 -p) (nth 2 ut)) (nth 3 ut)))
                                        (if (= n n2)
                                        then    (set n (min (max (+ (nth 3 ut) n1 -q) (nth 2 ut)) (nth 3 ut))) )
                                        (<> n n2)
                                        (gtk-spin-button-set-value (assoc-get info "w-spin2") n)
                                        (fail) )
                                (set ut (queue-get u))
                        else    (if (in n1 p .. q)
                                then    (set n (if (= prv undef) 1 prv))
                                        (<> n n2)
                                        (gtk-spin-button-set-value (assoc-get info "w-spin2") n)
                                        (fail) ))
                        (clr prv)
                else    (set prv (+ n q -p)) )))

(defnet supervision-left (info)
        (supervision-sync-skip info -1) )

(defnet supervision-right (info)
        (supervision-sync-skip info 1) )

(defnet supervision-left-double (info)
        (supervision-sync-skip info -(cfg-get-or-default-num "supervision-skip-double" (assoc-get info "default"))) )

(defnet supervision-right-double (info)
        (supervision-sync-skip info (cfg-get-or-default-num "supervision-skip-double" (assoc-get info "default"))) )

(defnet supervision-left-first (info)
        (deflocal n c i t p done pirr)

        (set n (assoc-get info "supervision-n1"))
        (set c 1)
        (set done false)
        (set pirr false)
        (for i in (assoc-get info "a-combo-goto") do
                (set t (nth 2 i))
                (if (or (= t 1) (= t 3) (and (= t 0) (not pirr)))
                then    (set p (nth 0 i))
                        (if (> p n)
                        then    (set done true)
                        else    (set c p) ))
                until done
                (set pirr (= t 0)) )
        (supervision-sync-skip info (- c n)) )

(defnet supervision-right-last (info)
        (deflocal n c i t p done pirr)

        (set n (assoc-get info "supervision-n1"))
        (set c (- (av-index-entries (assoc-get info "av1")) 2))
        (set done false)
        (set pirr false)
        (for i in (assoc-get info "a-combo-goto") rev do
                (set t (nth 2 i))
                (if (or (= t 2) (= t 3) (and (= t 0) (not pirr)))
                then    (set p (nth 0 i))
                        (if (< p n)
                        then    (set done true)
                        else    (set c p) ))
                until done
                (set pirr (= t 0)) )
        (supervision-sync-skip info (- c n)) )

(defnet supervision-sync-skip (info n)
        (deflocal av1 av2 n1 n2 c)

        (<> n 0)
        (set av1 (assoc-get info "av1"))
        (set av2 (assoc-get info "av2"))
        (set n1 (+ n (assoc-get info "supervision-n1")))
        (set n2 (+ n (assoc-get info "supervision-n2")))
        (set c (min n1 n2))
        (if (< c 1)
        then    (set c (- 1 c))
                (inc n1 c)
                (inc n2 c) )
        (set c (min (- (av-index-entries av1) n1) (- (av-index-entries av2) n2)))
        (if (< c 2)
        then    (inc c -2)
                (inc n1 c)
                (inc n2 c) )
        (gtk-spin-button-set-value (assoc-get info "w-spin1") n1)
        (gtk-spin-button-set-value (assoc-get info "w-spin2") n2) )

(defnet supervision-force (info)
        (deflocal key k a win map n1 n2 d p q n i)

        (set key (key-map (assoc-get info "av1")
                          (assoc-get info "av2")
                          (fullpath->name (assoc-get info "path1"))
                          (fullpath->name (assoc-get info "path2")) ))
        (set k (cfg-get key))
        (<> k undef)
        (set a (nth 2 k))
        (set n1 (assoc-get info "supervision-n1"))
        (set n2 (assoc-get info "supervision-n2"))
        (set win (assoc-get info "w-win"))
        (set map (map-create (nth 0 k) (nth 1 k)))
        (for i in a do
                (set p (nth 0 i))
                (set q (nth 1 i))
                (set n (nth 2 i))
                (if (in n1 p .. (+ p n -1))
                then    (set d (for-pos))
                        (if (= (+ n1 q -p) n2)
                        then    (gtk-question win (+ "" n1 $" is actually linked to " n2 "." nl
                                                     $"Do you want to remove the link?" ))
                                (array-remove a d)
                                (cfg-set key k)
                                (gui-report info)
                                (gui-update info)
                                (if (= n1 p)
                                then    (for i in (assoc-get info "a-combo-goto") do
                                                (if (and (= (nth 0 i) (+ n1 n)) (in (nth 2 i) [ 1 3 ]))
                                                then    (gtk-combo-box-set-active (assoc-get info "w-combo-goto") (for-pos)) )))
                                (if (= n1 (+ p n -1))
                                then    (for i in (assoc-get info "a-combo-goto") do
                                                (if (and (= (nth 0 i) (- n1 n)) (in (nth 2 i) [ 2 3 ]))
                                                then    (gtk-combo-box-set-active (assoc-get info "w-combo-goto") (for-pos)) )))
                                (fail) )
                else    (map-bind-basic (car map) p q n)
                        (map-bind-basic (cdr map) q p n) ))
        (set p false)
        (for i in (map-undef-basic (car map) (cdr map)) do
                (set p (in n1 (nth 0 i) .. (nth 1 i)))
                until p )
        (if (not p)
        then    (gtk-message-warning win (+ $"Can't link " n1 $" to " n2))
                (fail) )
        (if (not (in n2 (nth 2 i) .. (nth 3 i)))
        then    (gtk-message-warning win (+ $"At the moment " n1 $" can only be mapped in ["
                        (int->str (nth 2 i) 6 '0') "-" (int->str (nth 3 i) 6 '0') "]." ))
                (fail) )
        (gtk-question win (+ "" n1 $" will be linked to " n2 ". " $"Are you sure?"
                             (if (integerp d) $"\nNOTE: a previously established link will be removed." "") ))
        (if (integerp d)
        then    (array-remove a d) )
        (array-append a (list n1 n2 1))
        (cfg-set key k)
        (gui-report info)
        (gui-update info)
        (for i in (assoc-get info "a-combo-goto") do
                (if (= (nth 0 i) n1)
                then    (gtk-combo-box-set-active (assoc-get info "w-combo-goto") (for-pos)) )))

(defnet supervision-goto (info cb ab)
        (set cb (gtk-combo-box-get-active cb))
        (>= cb 0)
        (set cb (nth cb ab))
        (gtk-spin-button-set-value (assoc-get info "w-spin1") (nth 0 cb))
        (gtk-spin-button-set-value (assoc-get info "w-spin2") (nth 1 cb)) )

