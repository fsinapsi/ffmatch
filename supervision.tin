(defnet supervision (info)
        (deflocal pix)

        (if (assoc-get info "supervision")
        then    (assoc-set info "supervision" false)
                (supervision-clear info)
                (set pix (assoc-get info "pix"))
                (pix-logo pix)
                (gtk-image-set-from-pixbuf (assoc-get info "w-image") pix)
        else    (<> (assoc-get info "av1") undef)
                (<> (assoc-get info "av2") undef)
                (assoc-set info "supervision" true)
                (supervision-pix info) )
        (gui-update info) )

(defnet supervision-clear (info)
        (close (assoc-get info "supervision-pix1")
               (assoc-get info "supervision-pix2") )
        (assoc-clr info "supervision-n1")
        (assoc-clr info "supervision-n2")
        (assoc-clr info "supervision-pix1")
        (assoc-clr info "supervision-pix2") )

(defnet supervision-pix-with-check (info)
        (= (assoc-get info "supervision") true)
        (supervision-pix info) )

(defnet supervision-pix (info)
        (deflocal n1 n2 oldn1 oldn2 av1 av2 pix frm1 frm2 k default-info)

        (set n1 (assoc-get info "w-spin1"))
        (gtk-spin-button-update n1)
        (set n1 (gtk-spin-button-get-value n1))
        (set n2 (assoc-get info "w-spin2"))
        (gtk-spin-button-update n2)
        (set n2 (gtk-spin-button-get-value n2))
        (set oldn1 (assoc-get info "supervision-n1"))
        (set oldn2 (assoc-get info "supervision-n2"))
        (or (<> n1 oldn1) (<> n2 oldn2))
        (set av1 (assoc-get info "av1"))
        (set av2 (assoc-get info "av2"))
        (set pix (assoc-get info "pix"))
        (if (and (= oldn1 undef) (= oldn2 undef))
        then    (pix-clear pix)
                (set k (min (/ (- (width pix) (* 2 (space))) (max (width av1) (width av2)))
                            (/ (- (height pix) (* 3 (space))) (+ (height av1) (height av2))) ))
                (assoc-set info "supervision-pix1" (pix-create (* k (width av1)) (* k (height av1))))
                (assoc-set info "supervision-pix2" (pix-create (* k (width av2)) (* k (height av2)))) )
        (set frm1 (assoc-get info "supervision-pix1"))
        (set frm2 (assoc-get info "supervision-pix2"))
        (set k (/ (- (height pix) (height frm1) (height frm2) (space)) 2))
        (set default-info (assoc-get info "default"))
        (if (<> n1 oldn1)
        then    (alt    (seq    (read-frame av1 n1 frm1)
                                (pix-gamma frm1 (cfg-get-or-default-num "filter-gamma1" default-info))
                                (if (cfg-get-or-default "filter-mirror1" default-info)
                                then    (pix-hflip frm1) )
                                (if (cfg-get-or-default "filter-flip1" default-info)
                                then    (pix-vflip frm1) ))
                        (pix-error frm1) )
                (pix-draw-pix pix (/ (- (width pix) (width frm1)) 2) k frm1)
                (assoc-set info "supervision-n1" n1) )
        (if (<> n2 oldn2)
        then    (alt    (seq    (read-frame av2 n2 frm2)
                                (pix-gamma frm2 (cfg-get-or-default-num "filter-gamma2" default-info))
                                (if (cfg-get-or-default "filter-mirror2" default-info)
                                then    (pix-hflip frm2) )
                                (if (cfg-get-or-default "filter-flip2" default-info)
                                then    (pix-vflip frm2) ))
                        (pix-error frm2) )
                (pix-draw-pix pix (/ (- (width pix) (width frm2)) 2) (+ k (height frm1) (space)) frm2)
                (assoc-set info "supervision-n2" n2) )
        (gtk-image-set-from-pixbuf (assoc-get info "w-image") pix) )

(defnet supervision-scd-left1 (info)
        (deflocal av scd thres n)

        (set av (assoc-get info "av1"))
        (set scd (cfg-get (key-scd av (fullpath->name (assoc-get info "path1")))))
        (listp scd)
        (set scd (nth 4 scd))
        (set thres (gtk-spin-button-get-value (assoc-get info "w-scd-spin1")))
        (for n in 1 .. (- (assoc-get info "supervision-n1") 1) rev do
                (if (>= (nth n scd) thres)
                then    (gtk-spin-button-set-value (assoc-get info "w-spin1") n)
                        (fail) )))

(defnet supervision-scd-right1 (info)
        (deflocal av scd thres n)

        (set av (assoc-get info "av1"))
        (set scd (cfg-get (key-scd av (fullpath->name (assoc-get info "path1")))))
        (listp scd)
        (set scd (nth 4 scd))
        (set thres (gtk-spin-button-get-value (assoc-get info "w-scd-spin1")))
        (for n in (+ (assoc-get info "supervision-n1") 1) .. (- (av-index-entries av) 2) do
                (if (>= (nth n scd) thres)
                then    (gtk-spin-button-set-value (assoc-get info "w-spin1") n)
                        (fail) )))

